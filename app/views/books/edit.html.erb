<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: update_book_path(@book), method: :patch do |f| %>
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <% if @book.errors.count == 1 %>
            <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
          <% else %>
            <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
          <% end %>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        <div class="form-group">
        <label for="book_title">Title</label>
          <%= f.text_field :title, id: "book_title", class: "form-control book_title"%>
        </div>
        <div class="form-group">
        <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, id: "book_body", class: "form-control book_body"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      <%= link_to book_path(@book) do %>
      Show
      <% end %>
      |
      <%= link_to books_path do %>
      Back
      <% end %>
    </div>
  </div>
</div>

