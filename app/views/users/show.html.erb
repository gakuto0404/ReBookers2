<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.image, size: "100x100" %>
      <% else %>
        <%= image_tag 'default-image', size: "100x100" %>
      <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_69195" do%>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new do |f| %>
        <div class="form-group">
          <label>Title</lable>
          <%= f.text_field :title, :class => 'form-control book_'%>
        </div>
        <div class="form-group">
          <lable>Opinion</lable>
          <%= f.text_area :body, :class => 'form-control book_body'%>
        </div>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
      </table>
    </div>
  </div>
</div>
